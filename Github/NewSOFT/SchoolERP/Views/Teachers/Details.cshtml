@model SchoolERP.Models.Teacher

@{
    ViewData["Title"] = "Faculty Profile";
}

<div class="container-fluid mt-4 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            
            <div class="text-center mb-4">
                <h2 class="fw-bold text-dark">
                    <i class="fa-regular fa-id-badge text-info me-2"></i> Faculty Profile
                </h2>
                <p class="text-muted">Detailed view of the teacher's departmental and hiring records.</p>
            </div>

            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-5">
                    
                    <div class="text-center mb-4">
                        <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-inline-flex justify-content-center align-items-center mb-3 shadow-sm" style="width: 80px; height: 80px; font-size: 2.5rem;">
                            <i class="fa-solid fa-user-tie"></i>
                        </div>
                        <h3 class="fw-bold text-dark mb-1">@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</h3>
                        <div class="mt-2">
                            <span class="badge bg-light text-dark border px-3 py-2 fs-6 shadow-sm">
                                <i class="fa-solid fa-building text-muted me-1"></i> @Html.DisplayFor(model => model.Department)
                            </span>
                        </div>
                    </div>

                    <hr class="text-muted opacity-25 mb-4" />

                    <div class="row g-3 fs-6 px-3 mb-4">
                        <div class="col-sm-5 text-secondary fw-bold">First Name</div>
                        <div class="col-sm-7 text-dark fw-semibold">@Html.DisplayFor(model => model.FirstName)</div>

                        <div class="col-sm-5 text-secondary fw-bold mt-3">Last Name</div>
                        <div class="col-sm-7 text-dark mt-3 fw-semibold">@Html.DisplayFor(model => model.LastName)</div>

                        <div class="col-sm-5 text-secondary fw-bold mt-3 align-self-center">Department Focus</div>
                        <div class="col-sm-7 text-dark mt-3 fw-semibold">
                            <span class="badge bg-secondary bg-opacity-25 text-dark rounded-pill px-3 py-2 border border-secondary">
                                <i class="fa-solid fa-book-open text-primary me-1"></i>
                                @Html.DisplayFor(model => model.Department)
                            </span>
                        </div>

                        <div class="col-sm-5 text-secondary fw-bold mt-3">Date of Hire</div>
                        <div class="col-sm-7 text-dark mt-3 fw-semibold">
                            <i class="fa-regular fa-calendar-check text-muted me-2"></i>@Html.DisplayFor(model => model.HireDate)
                        </div>
                    </div>

                    <hr class="text-muted opacity-25 my-4" />

                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-action="Index" class="btn btn-light border shadow-sm px-4 rounded-3 text-secondary fw-semibold">
                            <i class="fa-solid fa-arrow-left me-2"></i> Back to Directory
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary px-5 shadow-sm rounded-3 fw-bold">
                            <i class="fa-solid fa-pen-to-square me-2"></i> Edit Profile
                        </a>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>