@{
    ViewData["Title"] = "AI Smart Assistant";
}

<div class="container mt-4">
    <h2 class="mb-4">ðŸ§  Enterprise AI Assistant</h2>
    <p class="text-muted">Draft lesson plans, summarize attendance, or generate administrative reports.</p>

    <form asp-controller="SmartAssistant" asp-action="Index" method="post" class="mb-4">
        <div class="form-group mb-3">
            <textarea name="prompt" class="form-control" rows="4" placeholder="How can I help you today?">@ViewBag.OriginalPrompt</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Ask AI</button>
    </form>

    @if (ViewBag.Response != null)
    {
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <strong>Gemini's Response:</strong>
            </div>
            <div class="card-body">
                <p style="white-space: pre-wrap;">@ViewBag.Response</p>
            </div>
        </div>
    }
</div>