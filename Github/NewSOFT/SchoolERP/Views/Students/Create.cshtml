@model SchoolERP.Models.Student

@{
    ViewData["Title"] = "Enroll Student";
}

<div class="container-fluid mt-4 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            
            <div class="text-center mb-4">
                <h2 class="fw-bold text-dark">
                    <i class="fa-solid fa-user-plus text-primary me-2"></i> Enroll New Student
                </h2>
                <p class="text-muted">Enter the student's personal details and assign them to a classroom.</p>
            </div>

            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-5">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3 fw-bold"></div>
                        
                        <div class="row g-4 mb-3">
                            <div class="col-md-6">
                                <label asp-for="FirstName" class="form-label fw-bold text-secondary">First Name</label>
                                <div class="input-group shadow-sm">
                                    <span class="input-group-text bg-light border-end-0"><i class="fa-regular fa-user text-muted"></i></span>
                                    <input asp-for="FirstName" class="form-control border-start-0" placeholder="e.g. Jane" />
                                </div>
                                <span asp-validation-for="FirstName" class="text-danger small mt-1 d-block"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="LastName" class="form-label fw-bold text-secondary">Last Name</label>
                                <div class="input-group shadow-sm">
                                    <input asp-for="LastName" class="form-control" placeholder="e.g. Doe" />
                                </div>
                                <span asp-validation-for="LastName" class="text-danger small mt-1 d-block"></span>
                            </div>
                        </div>

                        <div class="row g-4 mb-3">
                            <div class="col-md-6">
                                <label asp-for="EnrollmentNumber" class="form-label fw-bold text-secondary">Enrollment ID</label>
                                <div class="input-group shadow-sm">
                                    <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-id-badge text-muted"></i></span>
                                    <input asp-for="EnrollmentNumber" class="form-control border-start-0" placeholder="STU-001" />
                                </div>
                                <span asp-validation-for="EnrollmentNumber" class="text-danger small mt-1 d-block"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="DateOfBirth" class="form-label fw-bold text-secondary">Date of Birth</label>
                                <div class="input-group shadow-sm">
                                    <span class="input-group-text bg-light border-end-0"><i class="fa-regular fa-calendar text-muted"></i></span>
                                    <input asp-for="DateOfBirth" class="form-control border-start-0" type="date" />
                                </div>
                                <span asp-validation-for="DateOfBirth" class="text-danger small mt-1 d-block"></span>
                            </div>
                        </div>

                        <div class="row g-4 mb-4">
                            <div class="col-md-12">
                                <label asp-for="ClassroomId" class="form-label fw-bold text-secondary">Assign Classroom</label>
                                <div class="input-group shadow-sm">
                                    <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-door-open text-muted"></i></span>
                                    <select asp-for="ClassroomId" class="form-select border-start-0" asp-items="ViewBag.ClassroomId">
                                        <option value="">-- Select a Classroom --</option>
                                    </select>
                                </div>
                                <span asp-validation-for="ClassroomId" class="text-danger small mt-1 d-block"></span>
                            </div>
                        </div>

                        <hr class="text-muted opacity-25 my-4" />

                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-light border shadow-sm px-4 rounded-3 text-secondary fw-semibold hover-lift">
                                <i class="fa-solid fa-arrow-left me-2"></i> Back to Directory
                            </a>
                            <button type="submit" class="btn btn-primary px-5 shadow-sm rounded-3">
                                <i class="fa-solid fa-check me-2"></i> Complete Enrollment
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}