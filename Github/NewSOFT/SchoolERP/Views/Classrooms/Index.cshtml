@model IEnumerable<SchoolERP.Models.Classroom>

@{
    ViewData["Title"] = "Classroom Directory";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-0"><i class="fa-solid fa-door-open me-2 text-primary"></i> Classroom Directory</h2>
            <p class="text-muted mb-0">Manage room assignments, subjects, and designated teachers.</p>
        </div>
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="fa-solid fa-plus me-2"></i> Create Classroom
        </a>
    </div>

    <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Room Detail</th>
                            <th>Subject Focus</th>
                            <th>Assigned Teacher</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model) {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-info bg-opacity-10 text-info rounded-circle d-flex justify-content-center align-items-center me-3" style="width: 45px; height: 45px;">
                                            <i class="fa-solid fa-chalkboard"></i>
                                        </div>
                                        <div>
                                            <div class="fw-bold text-dark fs-6">Room @item.RoomNumber</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="text-secondary fw-semibold"><i class="fa-solid fa-book me-1"></i> @item.Subject</span>
                                </td>
                                <td>
                                    <span class="badge bg-success bg-opacity-25 text-dark rounded-pill px-3 py-2 border border-success">
                                        <i class="fa-solid fa-user-tie me-1 text-success"></i> 
                                        @(item.Teacher != null ? $"{item.Teacher.FirstName} {item.Teacher.LastName}" : "Unassigned")
                                    </span>
                                </td>
                                <td class="text-end pe-4">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-light border shadow-sm rounded-circle me-1" title="Edit">
                                        <i class="fa-solid fa-pen text-primary"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-light border shadow-sm rounded-circle me-1" title="View Details">
                                        <i class="fa-solid fa-eye text-info"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-light border shadow-sm rounded-circle" title="Delete">
                                        <i class="fa-solid fa-trash text-danger"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>