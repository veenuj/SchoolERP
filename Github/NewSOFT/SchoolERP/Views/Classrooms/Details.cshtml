@model SchoolERP.Models.Classroom

@{
    ViewData["Title"] = "Classroom Details";
}

<div class="container-fluid mt-4 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            
            <div class="text-center mb-4">
                <h2 class="fw-bold text-dark">
                    <i class="fa-solid fa-chalkboard text-info me-2"></i> Classroom Details
                </h2>
                <p class="text-muted">Detailed view of the room's subject focus and assigned faculty.</p>
            </div>

            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-5">
                    
                    <div class="text-center mb-4">
                        <div class="bg-info bg-opacity-10 text-info rounded-circle d-inline-flex justify-content-center align-items-center mb-3 shadow-sm" style="width: 80px; height: 80px; font-size: 2.5rem;">
                            <i class="fa-solid fa-door-open"></i>
                        </div>
                        <h3 class="fw-bold text-dark mb-1">Room @Html.DisplayFor(model => model.RoomNumber)</h3>
                        <div class="mt-2">
                            <span class="badge bg-light text-dark border px-3 py-2 fs-6 shadow-sm">
                                <i class="fa-solid fa-book text-muted me-1"></i> @Html.DisplayFor(model => model.Subject)
                            </span>
                        </div>
                    </div>

                    <hr class="text-muted opacity-25 mb-4" />

                    <div class="row g-3 fs-6 px-3 mb-4">
                        <div class="col-sm-5 text-secondary fw-bold">Room Number</div>
                        <div class="col-sm-7 text-dark fw-semibold">
                            <i class="fa-solid fa-hashtag text-muted me-2"></i>@Html.DisplayFor(model => model.RoomNumber)
                        </div>

                        <div class="col-sm-5 text-secondary fw-bold mt-3">Subject Focus</div>
                        <div class="col-sm-7 text-dark mt-3 fw-semibold">@Html.DisplayFor(model => model.Subject)</div>

                        <div class="col-sm-5 text-secondary fw-bold mt-3 align-self-center">Assigned Teacher</div>
                        <div class="col-sm-7 text-dark mt-3 fw-semibold">
                            <span class="badge bg-success bg-opacity-25 text-dark rounded-pill px-3 py-2 border border-success">
                                <i class="fa-solid fa-user-tie text-success me-1"></i> 
                                @(Model.Teacher != null ? $"{Model.Teacher.FirstName} {Model.Teacher.LastName}" : "Unassigned")
                            </span>
                        </div>
                    </div>

                    <hr class="text-muted opacity-25 my-4" />

                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-action="Index" class="btn btn-light border shadow-sm px-4 rounded-3 text-secondary fw-semibold">
                            <i class="fa-solid fa-arrow-left me-2"></i> Back to Directory
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary px-5 shadow-sm rounded-3 fw-bold">
                            <i class="fa-solid fa-pen-to-square me-2"></i> Edit Classroom
                        </a>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>