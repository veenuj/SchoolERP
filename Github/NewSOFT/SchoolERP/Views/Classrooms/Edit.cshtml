@model SchoolERP.Models.Classroom

@{
    ViewData["Title"] = "Edit Classroom";
}

<div class="container-fluid mt-4 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            
            <div class="text-center mb-4">
                <h2 class="fw-bold text-dark">
                    <i class="fa-solid fa-pen-to-square text-primary me-2"></i> Edit Classroom Details
                </h2>
                <p class="text-muted">Update the room assignment, subject focus, or primary teacher.</p>
            </div>

            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-5">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3 fw-bold"></div>
                        
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="row g-4 mb-3">
                            <div class="col-md-6">
                                <label asp-for="RoomNumber" class="form-label fw-bold text-secondary">Room Number</label>
                                <div class="input-group shadow-sm">
                                    <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-hashtag text-muted"></i></span>
                                    <input asp-for="RoomNumber" class="form-control border-start-0" placeholder="e.g. 101A" />
                                </div>
                                <span asp-validation-for="RoomNumber" class="text-danger small mt-1 d-block"></span>
                            </div>
                            
                            <div class="col-md-6">
                                <label asp-for="Subject" class="form-label fw-bold text-secondary">Subject Focus</label>
                                <div class="input-group shadow-sm">
                                    <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-book text-muted"></i></span>
                                    <input asp-for="Subject" class="form-control border-start-0" placeholder="e.g. Computer Science" />
                                </div>
                                <span asp-validation-for="Subject" class="text-danger small mt-1 d-block"></span>
                            </div>
                        </div>

                        <div class="row g-4 mb-4">
                            <div class="col-md-12">
                                <label asp-for="TeacherId" class="form-label fw-bold text-secondary">Assign Primary Teacher</label>
                                <div class="input-group shadow-sm">
                                    <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-user-tie text-muted"></i></span>
                                    <select asp-for="TeacherId" class="form-select border-start-0" asp-items="ViewBag.TeacherId">
                                        <option value="">-- Select a Faculty Member --</option>
                                    </select>
                                </div>
                                <span asp-validation-for="TeacherId" class="text-danger small mt-1 d-block"></span>
                            </div>
                        </div>

                        <hr class="text-muted opacity-25 my-4" />

                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-light border shadow-sm px-4 rounded-3 text-secondary fw-semibold">
                                <i class="fa-solid fa-arrow-left me-2"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary px-5 shadow-sm rounded-3 fw-bold">
                                <i class="fa-solid fa-floppy-disk me-2"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}