@model SchoolERP.Models.Payroll

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-dark p-4 text-white d-flex justify-content-between">
                    <div>
                        <h4 class="mb-0 fw-bold">SALARY SLIP</h4>
                        <small class="opacity-75">Generated by SchoolERP Console</small>
                    </div>
                    <div class="text-end">
                        <h5 class="mb-0">@Model.Month, @Model.Year</h5>
                    </div>
                </div>
                <div class="card-body p-5">
                    <div class="row mb-4">
                        <div class="col-6">
                            <h6 class="text-muted text-uppercase small fw-bold">Employee</h6>
                            <h5 class="fw-bold">@Model.Teacher?.FirstName @Model.Teacher?.LastName</h5>
                            <p class="text-muted">Dept: @Model.Teacher?.Department</p>
                        </div>
                        <div class="col-6 text-end">
                            <h6 class="text-muted text-uppercase small fw-bold">Payment Date</h6>
                            <h5>@Model.PaymentDate.ToShortDateString()</h5>
                        </div>
                    </div>

                    <table class="table table-bordered">
                        <thead class="bg-light">
                            <tr>
                                <th>Earnings</th>
                                <th class="text-end">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Base Salary</td>
                                <td class="text-end">₹@Model.BaseSalary.ToString("N2")</td>
                            </tr>
                            <tr>
                                <td>Allowances</td>
                                <td class="text-end">₹@Model.Allowances.ToString("N2")</td>
                            </tr>
                            <tr class="table-danger text-danger">
                                <td>Deductions (-)</td>
                                <td class="text-end">₹@Model.Deductions.ToString("N2")</td>
                            </tr>
                        </tbody>
                        <tfoot class="table-dark">
                            <tr>
                                <th class="fs-5">Net Payable</th>
                                <th class="text-end fs-5">₹@Model.NetSalary.ToString("N2")</th>
                            </tr>
                        </tfoot>
                    </table>

                    <div class="mt-5 d-flex justify-content-between align-items-center">
                        <div>
                            <span class="badge @(Model.IsPaid ? "bg-success" : "bg-warning") px-4 py-2 fs-6">
                                STATUS: @(Model.IsPaid ? "PAID" : "PENDING")
                            </span>
                        </div>
                        <div class="d-flex gap-2">
                            <a asp-action="Index" class="btn btn-light border"><i class="fa-solid fa-arrow-left me-2"></i>Back</a>
                            <button class="btn btn-primary" onclick="window.print()"><i class="fa-solid fa-print me-2"></i>Print Slip</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="text-center mt-4">
                <p class="text-muted small">System Developed by <a href="https://anujdhiman.netlify.app/" target="_blank" class="text-decoration-none">Anuj Dhiman</a></p>
            </div>
        </div>
    </div>
</div>