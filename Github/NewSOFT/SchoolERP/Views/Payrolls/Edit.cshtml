@model SchoolERP.Models.Payroll

@{
    ViewData["Title"] = "Update Payroll Record";
}

<div class="container-fluid mt-4 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-9 col-md-11">
            
            <div class="text-center mb-4">
                <h2 class="fw-bold text-dark">
                    <i class="fa-solid fa-file-pen text-primary me-2"></i> Edit Payroll Entry
                </h2>
                <p class="text-muted">Modify salary components, adjustments, or payment status for this record.</p>
            </div>

            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-5">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3 fw-bold"></div>
                        
                        <input type="hidden" asp-for="Id" />
                        
                        <h5 class="fw-bold text-primary mb-4 border-bottom pb-2">
                            <i class="fa-solid fa-user-gear me-2"></i> Employee & Period Assignment
                        </h5>
                        <div class="row g-4 mb-5">
                            <div class="col-md-6">
                                <label asp-for="TeacherId" class="form-label fw-bold text-secondary">Faculty Member</label>
                                <div class="input-group shadow-sm">
                                    <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-id-card text-muted"></i></span>
                                    <select asp-for="TeacherId" class="form-select border-start-0" asp-items="ViewBag.TeacherId"></select>
                                </div>
                                <span asp-validation-for="TeacherId" class="text-danger small mt-1 d-block"></span>
                            </div>
                            
                            <div class="col-md-3">
                                <label asp-for="Month" class="form-label fw-bold text-secondary">Pay Month</label>
                                <div class="input-group shadow-sm">
                                    <input asp-for="Month" class="form-control" />
                                </div>
                                <span asp-validation-for="Month" class="text-danger small mt-1 d-block"></span>
                            </div>

                            <div class="col-md-3">
                                <label asp-for="Year" class="form-label fw-bold text-secondary">Pay Year</label>
                                <div class="input-group shadow-sm">
                                    <input asp-for="Year" class="form-control" type="number" />
                                </div>
                                <span asp-validation-for="Year" class="text-danger small mt-1 d-block"></span>
                            </div>
                        </div>

                        <h5 class="fw-bold text-primary mb-4 border-bottom pb-2">
                            <i class="fa-solid fa-calculator me-2"></i> Financial Structure
                        </h5>
                        <div class="row g-4 mb-5">
                            <div class="col-md-4">
                                <label asp-for="BaseSalary" class="form-label fw-bold text-secondary">Base Salary</label>
                                <div class="input-group shadow-sm">
                                    <span class="input-group-text bg-light border-end-0">â‚¹</span>
                                    <input asp-for="BaseSalary" class="form-control border-start-0" />
                                </div>
                                <span asp-validation-for="BaseSalary" class="text-danger small mt-1 d-block"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="Allowances" class="form-label fw-bold text-secondary">Allowances (+)</label>
                                <div class="input-group shadow-sm">
                                    <span class="input-group-text bg-light border-end-0 text-success"><i class="fa-solid fa-circle-plus"></i></span>
                                    <input asp-for="Allowances" class="form-control border-start-0" />
                                </div>
                                <span asp-validation-for="Allowances" class="text-danger small mt-1 d-block"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="Deductions" class="form-label fw-bold text-secondary">Deductions (-)</label>
                                <div class="input-group shadow-sm">
                                    <span class="input-group-text bg-light border-end-0 text-danger"><i class="fa-solid fa-circle-minus"></i></span>
                                    <input asp-for="Deductions" class="form-control border-start-0" />
                                </div>
                                <span asp-validation-for="Deductions" class="text-danger small mt-1 d-block"></span>
                            </div>
                        </div>

                        <h5 class="fw-bold text-primary mb-4 border-bottom pb-2">
                            <i class="fa-solid fa-check-double me-2"></i> Payment Status
                        </h5>
                        <div class="row g-4 align-items-center mb-4">
                            <div class="col-md-6">
                                <label asp-for="PaymentDate" class="form-label fw-bold text-secondary">Payment Date</label>
                                <div class="input-group shadow-sm">
                                    <span class="input-group-text bg-light border-end-0"><i class="fa-regular fa-calendar-check text-muted"></i></span>
                                    <input asp-for="PaymentDate" class="form-control border-start-0" type="date" />
                                </div>
                                <span asp-validation-for="PaymentDate" class="text-danger small mt-1 d-block"></span>
                            </div>

                            <div class="col-md-6">
                                <div class="p-3 rounded-3 bg-light border mt-4">
                                    <div class="form-check form-switch d-flex align-items-center justify-content-between px-0">
                                        <label class="form-check-label fw-bold text-dark mb-0 ms-0" for="IsPaidSwitch">
                                            <i class="fa-solid fa-receipt text-success me-2"></i> Set Status to Paid
                                        </label>
                                        <input class="form-check-input ms-0" type="checkbox" role="switch" id="IsPaidSwitch" asp-for="IsPaid" style="width: 3rem; height: 1.5rem;">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr class="text-muted opacity-25 my-4" />

                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-light border shadow-sm px-4 rounded-3 text-secondary fw-semibold">
                                <i class="fa-solid fa-arrow-left me-2"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary px-5 shadow-sm rounded-3 fw-bold">
                                <i class="fa-solid fa-floppy-disk me-2"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            
            <div class="text-center mt-4">
                <p class="text-muted small">System Managed by <a href="https://anujdhiman.netlify.app/" target="_blank" class="text-decoration-none">Anuj Dhiman</a></p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}