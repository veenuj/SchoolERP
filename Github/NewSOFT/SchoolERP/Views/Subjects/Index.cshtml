@model IEnumerable<SchoolERP.Models.Subject>

@{
    ViewData["Title"] = "Subject Directory";
}

<div class="container-fluid mt-4 mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-0">
                <i class="fa-solid fa-book-bookmark text-primary me-2"></i> Academic Curriculum
            </h2>
            <p class="text-muted mb-0">Manage the courses and credit values offered by the institution.</p>
        </div>
        <a asp-action="Create" class="btn btn-primary shadow-sm px-4 rounded-3 fw-bold">
            <i class="fa-solid fa-plus me-2"></i> Create New Subject
        </a>
    </div>

    <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr class="text-secondary">
                            <th class="ps-4 py-3 text-uppercase fs-7 fw-bold">Subject Name</th>
                            <th class="py-3 text-uppercase fs-7 fw-bold">Course Code</th>
                            <th class="py-3 text-uppercase fs-7 fw-bold">Credit Value</th>
                            <th class="text-end pe-4 py-3 text-uppercase fs-7 fw-bold">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="4" class="text-center py-5">
                                    <i class="fa-solid fa-folder-open text-muted fs-1 d-block mb-3"></i>
                                    <span class="text-muted fw-semibold">No subjects found. Start by creating a new curriculum entry.</span>
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div class="bg-primary bg-opacity-10 text-primary rounded-3 p-2 me-3">
                                                <i class="fa-solid fa-scroll"></i>
                                            </div>
                                            <span class="fw-bold text-dark">@Html.DisplayFor(modelItem => item.Name)</span>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-light text-primary border border-primary-subtle px-3 py-2 fw-semibold">
                                            <i class="fa-solid fa-barcode me-1 text-muted"></i> @Html.DisplayFor(modelItem => item.Code)
                                        </span>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="progress flex-grow-1 me-2" style="height: 6px; max-width: 100px;">
                                                <div class="progress-bar bg-warning" role="progressbar" style="width: @(item.Credits * 20)%"></div>
                                            </div>
                                            <span class="fw-bold text-dark">@item.Credits <small class="text-muted">pts</small></span>
                                        </div>
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="btn-group shadow-sm rounded-3 overflow-hidden">
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-white btn-sm border-end px-3" title="View Details">
                                                <i class="fa-solid fa-eye text-info"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-white btn-sm border-end px-3" title="Edit Subject">
                                                <i class="fa-solid fa-pen text-primary"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-white btn-sm px-3" title="Delete Record">
                                                <i class="fa-solid fa-trash text-danger"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3 text-end">
        <p class="text-muted small">
            Total Subjects Enrolled: <span class="fw-bold text-dark">@Model.Count()</span>
        </p>
    </div>
</div>