@model SchoolERP.Models.Subject

@{
    ViewData["Title"] = "Remove Subject";
}

<div class="container-fluid mt-4 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            
            <div class="text-center mb-4">
                <h2 class="fw-bold text-danger">
                    <i class="fa-solid fa-calendar-minus me-2"></i> Remove Subject
                </h2>
                <p class="text-muted">Review the course details carefully before permanent removal.</p>
            </div>

            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-5">
                    
                    <div class="alert alert-danger border-0 shadow-sm rounded-3 mb-4 d-flex align-items-center">
                        <i class="fa-solid fa-circle-exclamation fs-2 me-3 text-danger"></i>
                        <div>
                            <h6 class="fw-bold mb-1 text-danger">Curriculum Impact Warning</h6>
                            <p class="mb-0 small text-danger opacity-75">Deleting this subject will permanently remove it from the curriculum. Please ensure no classrooms are currently assigned to this subject before proceeding.</p>
                        </div>
                    </div>

                    <h5 class="fw-bold text-dark border-bottom pb-3 mb-4">
                        <i class="fa-solid fa-book text-primary me-2"></i> Course Information
                    </h5>

                    <div class="row g-3 mb-4 fs-6">
                        <div class="col-sm-4 text-secondary fw-bold mt-2">Subject Name</div>
                        <div class="col-sm-8 text-dark fw-semibold mt-2">
                            @Html.DisplayFor(model => model.Name)
                        </div>

                        <div class="col-sm-4 text-secondary fw-bold mt-3">Course Code</div>
                        <div class="col-sm-8 text-dark fw-semibold mt-3">
                            <span class="badge bg-light text-dark border px-3 py-2 fs-6 shadow-sm">
                                <i class="fa-solid fa-barcode text-muted me-1"></i> @Html.DisplayFor(model => model.Code)
                            </span>
                        </div>

                        <div class="col-sm-4 text-secondary fw-bold mt-3">Academic Credits</div>
                        <div class="col-sm-8 text-dark fw-semibold mt-3">
                            <i class="fa-solid fa-medal text-warning me-1"></i> @Html.DisplayFor(model => model.Credits) Points
                        </div>
                    </div>

                    <hr class="text-muted opacity-25 mb-4" />

                    <form asp-action="Delete" class="d-flex justify-content-between align-items-center">
                        <input type="hidden" asp-for="Id" />
                        
                        <a asp-action="Index" class="btn btn-light border shadow-sm px-4 rounded-3 text-secondary fw-semibold">
                            <i class="fa-solid fa-arrow-left me-2"></i> Cancel
                        </a>
                        
                        <button type="submit" class="btn btn-danger px-5 shadow-sm rounded-3 fw-bold">
                            <i class="fa-solid fa-trash-can me-2"></i> Confirm Delete
                        </button>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>