@model SchoolERP.Models.Subject

@{
    ViewData["Title"] = "Subject Overview";
}

<div class="container-fluid mt-4 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            
            <div class="text-center mb-4">
                <h2 class="fw-bold text-dark">
                    <i class="fa-solid fa-scroll text-info me-2"></i> Course Details
                </h2>
                <p class="text-muted">Comprehensive view of the academic subject and its credit valuation.</p>
            </div>

            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-5">
                    
                    <div class="text-center mb-4">
                        <div class="bg-info bg-opacity-10 text-info rounded-circle d-inline-flex justify-content-center align-items-center mb-3 shadow-sm" style="width: 80px; height: 80px; font-size: 2.5rem;">
                            <i class="fa-solid fa-book-open-reader"></i>
                        </div>
                        <h3 class="fw-bold text-dark mb-1">@Html.DisplayFor(model => model.Name)</h3>
                        <div class="mt-2">
                            <span class="badge bg-primary bg-opacity-10 text-primary border border-primary px-3 py-2 fs-6 shadow-sm">
                                <i class="fa-solid fa-barcode me-1"></i> @Html.DisplayFor(model => model.Code)
                            </span>
                        </div>
                    </div>

                    <hr class="text-muted opacity-25 mb-4" />

                    <div class="row g-3 fs-6 px-3 mb-4">
                        <div class="col-sm-5 text-secondary fw-bold">Full Subject Name</div>
                        <div class="col-sm-7 text-dark fw-semibold">@Html.DisplayFor(model => model.Name)</div>

                        <div class="col-sm-5 text-secondary fw-bold mt-3">Course Code</div>
                        <div class="col-sm-7 text-dark mt-3 fw-bold text-uppercase">
                            <span class="text-primary">@Html.DisplayFor(model => model.Code)</span>
                        </div>

                        <div class="col-sm-5 text-secondary fw-bold mt-3 align-self-center">Credit Valuation</div>
                        <div class="col-sm-7 text-dark mt-3 fw-semibold">
                            <span class="badge bg-warning text-dark rounded-pill px-3 py-2 shadow-sm border border-warning">
                                <i class="fa-solid fa-medal me-1 text-orange"></i> 
                                @Html.DisplayFor(model => model.Credits) Academic Credits
                            </span>
                        </div>
                    </div>

                    <hr class="text-muted opacity-25 my-4" />

                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-action="Index" class="btn btn-light border shadow-sm px-4 rounded-3 text-secondary fw-semibold">
                            <i class="fa-solid fa-arrow-left me-2"></i> Back to Curriculum
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary px-5 shadow-sm rounded-3 fw-bold">
                            <i class="fa-solid fa-pen-to-square me-2"></i> Modify Subject
                        </a>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>