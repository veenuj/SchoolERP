@model SchoolERP.Models.Attendance

@{
    ViewData["Title"] = "Attendance Entry Details";
}

<div class="container-fluid mt-4 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            
            <div class="text-center mb-4">
                <h2 class="fw-bold text-dark">
                    <i class="fa-solid fa-clipboard-check text-info me-2"></i> Attendance Details
                </h2>
                <p class="text-muted">Reviewing the specific entry for an individual student record.</p>
            </div>

            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-5">
                    
                    <div class="text-center mb-4">
                        @if (Model.IsPresent)
                        {
                            <div class="bg-success bg-opacity-10 text-success rounded-circle d-inline-flex justify-content-center align-items-center mb-3 shadow-sm" style="width: 80px; height: 80px; font-size: 2.5rem;">
                                <i class="fa-solid fa-user-check"></i>
                            </div>
                            <h3 class="fw-bold text-success mb-1">Present</h3>
                        }
                        else
                        {
                            <div class="bg-danger bg-opacity-10 text-danger rounded-circle d-inline-flex justify-content-center align-items-center mb-3 shadow-sm" style="width: 80px; height: 80px; font-size: 2.5rem;">
                                <i class="fa-solid fa-user-xmark"></i>
                            </div>
                            <h3 class="fw-bold text-danger mb-1">Absent</h3>
                        }
                        <div class="mt-2">
                            <span class="badge bg-light text-dark border px-3 py-2 fs-6 shadow-sm">
                                <i class="fa-regular fa-calendar text-muted me-1"></i> @Model.Date.ToLongDateString()
                            </span>
                        </div>
                    </div>

                    <hr class="text-muted opacity-25 mb-4" />

                    <div class="row g-3 fs-6 px-3 mb-4">
                        <div class="col-sm-5 text-secondary fw-bold">Student Name</div>
                        <div class="col-sm-7 text-dark fw-semibold">
                            <i class="fa-solid fa-user-graduate text-muted me-2"></i>
                            @(Model.Student != null ? $"{Model.Student.FirstName} {Model.Student.LastName}" : "Unknown Student")
                        </div>

                        <div class="col-sm-5 text-secondary fw-bold mt-3">Enrollment Reference</div>
                        <div class="col-sm-7 text-dark mt-3 fw-semibold text-muted">
                            #@(Model.Student != null ? Model.Student.EnrollmentNumber : "N/A")
                        </div>

                        <div class="col-sm-5 text-secondary fw-bold mt-3">Recording Date</div>
                        <div class="col-sm-7 text-dark mt-3 fw-semibold">
                            @Model.Date.ToShortDateString()
                        </div>

                        <div class="col-sm-5 text-secondary fw-bold mt-3 align-self-center">Verified Status</div>
                        <div class="col-sm-7 text-dark mt-3 fw-semibold">
                            @if (Model.IsPresent)
                            {
                                <span class="badge bg-success rounded-pill px-3 py-2">
                                    <i class="fa-solid fa-check-double me-1"></i> Confirmed Present
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger rounded-pill px-3 py-2">
                                    <i class="fa-solid fa-xmark me-1"></i> Confirmed Absent
                                </span>
                            }
                        </div>
                    </div>

                    <hr class="text-muted opacity-25 my-4" />

                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-action="Index" class="btn btn-light border shadow-sm px-4 rounded-3 text-secondary fw-semibold">
                            <i class="fa-solid fa-arrow-left me-2"></i> Back to Log
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary px-5 shadow-sm rounded-3 fw-bold">
                            <i class="fa-solid fa-pen-to-square me-2"></i> Edit Record
                        </a>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>