@model SchoolERP.Models.Attendance

@{
    ViewData["Title"] = "Adjust Attendance";
}

<div class="container-fluid mt-4 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">
            
            <div class="text-center mb-4">
                <h2 class="fw-bold text-dark">
                    <i class="fa-solid fa-calendar-check text-primary me-2"></i> Adjust Attendance Record
                </h2>
                <p class="text-muted">Modify the status or date for this specific student entry.</p>
            </div>

            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-5">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3 fw-bold"></div>
                        
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="mb-4">
                            <label asp-for="StudentId" class="form-label fw-bold text-secondary">Student Name</label>
                            <div class="input-group shadow-sm">
                                <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-user-graduate text-muted"></i></span>
                                <select asp-for="StudentId" class="form-select border-start-0" asp-items="ViewBag.StudentId">
                                    <option value="">-- Select Student --</option>
                                </select>
                            </div>
                            <span asp-validation-for="StudentId" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Date" class="form-label fw-bold text-secondary">Attendance Date</label>
                            <div class="input-group shadow-sm">
                                <span class="input-group-text bg-light border-end-0"><i class="fa-regular fa-calendar-days text-muted"></i></span>
                                <input asp-for="Date" class="form-control border-start-0" type="date" />
                            </div>
                            <span asp-validation-for="Date" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="mb-4 p-3 rounded-3 bg-light border">
                            <div class="form-check form-switch d-flex align-items-center justify-content-between px-0">
                                <label class="form-check-label fw-bold text-dark mb-0 ms-0" for="IsPresentSwitch">
                                    <i class="fa-solid fa-circle-check text-success me-2"></i> Mark as Present
                                </label>
                                <input class="form-check-input ms-0" type="checkbox" role="switch" id="IsPresentSwitch" asp-for="IsPresent" style="width: 3rem; height: 1.5rem;">
                            </div>
                            <small class="text-muted d-block mt-2">Uncheck this switch to mark the student as 'Absent'.</small>
                        </div>

                        <hr class="text-muted opacity-25 my-4" />

                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-light border shadow-sm px-4 rounded-3 text-secondary fw-semibold">
                                <i class="fa-solid fa-arrow-left me-2"></i> Back to Log
                            </a>
                            <button type="submit" class="btn btn-primary px-5 shadow-sm rounded-3 fw-bold">
                                <i class="fa-solid fa-floppy-disk me-2"></i> Update Record
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}